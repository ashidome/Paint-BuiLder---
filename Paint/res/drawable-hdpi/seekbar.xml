<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:id="@android:id/background">
    <shape>
      <corners
        android:radius="5dip" />
      <gradient
        android:startColor="#FFFFFF"
        android:centerColor="#FFFFFF"
        android:centerY="0.75"
        android:endColor="#FFFFFF"
        android:angle="270" />
       <stroke
        android:color="#FF949494"
        android:width="2dp" />
    </shape>
  </item>

  
  <item
    android:id="@android:id/secondaryProgress">
    <clip>
      <shape>
        <corners
          android:radius="5dip" />
        <gradient
          android:startColor="#FF949494"
          android:centerColor="#FF949494"
          android:centerY="0.75"
          android:endColor="#FF949494"
          android:angle="270" />
         <stroke
        android:color="#FF949494"
        android:width="2dp" />
      </shape>
    </clip>
  </item>
  <item
    android:id="@android:id/progress">
    <clip>
      <shape>
        <corners
          android:radius="5dip" />
        <gradient
          android:startColor="#FF949494"
          android:endColor="#FF949494"
		  android:angle="270" />
         <stroke
        android:color="#FF949494"
        android:width="2dp" />
      </shape>
    </clip>
  </item>
  </layer-list>